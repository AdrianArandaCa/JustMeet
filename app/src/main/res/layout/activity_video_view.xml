<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondobg3"
    tools:context=".Activitys.ActivityVideoView">



    <VideoView
        android:id="@+id/vvAnuncio"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="150dp"
        />

    <ImageButton
        android:id="@+id/btnGoWebsite"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vvAnuncio"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/tvFlechas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⇈"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGoWebsite"
        android:textColor="@color/dark_gold"

        />
    <TextView
        android:id="@+id/tvHazClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvFlechas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="¡HAZ CLICK PARA ACCEDER A LA PAGINA OFICIAL"
    android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/dark_gold"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/champagnebold"
        />

    <TextView
        android:id="@+id/tvAvisoAnuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHazClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Accederas a la app despues del anuncio"
        android:textAlignment="center"
        android:textColor="@color/dark_gold"
        android:textSize="20sp"
        android:fontFamily="@font/champagnebold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvAvisoAnuncio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="¡Contrata premium para omitirlos!"
        android:textAlignment="center"
        android:textColor="@color/dark_gold"
        android:textSize="15sp"
        android:fontFamily="@font/champagnebolditalic"

        />

</androidx.constraintlayout.widget.ConstraintLayout>