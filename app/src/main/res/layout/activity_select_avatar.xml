<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondobg1"
    tools:context=".Activitys.ActivitySelectAvatar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTituloAvatar"
        android:text="Escoge tu avatar"
        android:textColor="@color/dark_gold"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerAvatares"
        android:layout_marginTop="50dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardarAvatar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/border_button"
        android:text="Guardar Avatar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />


</LinearLayout>