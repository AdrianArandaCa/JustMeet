<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Activitys.ActivityChat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearHeader"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#302F2E"
        >

        <ImageButton
            android:id="@+id/btnBackChat"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:contentDescription="@string/imagesetting"
            android:src="@drawable/arrowbackgold"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/ivAvatarChat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:contentDescription="@string/imagesetting"
            android:src="@drawable/avatarhombre"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maria"
            android:id="@+id/tvNameUser"
            android:layout_gravity="center"
            android:textColor="@color/dark_gold"
            android:textSize="26sp"
            android:fontFamily="@font/champagnebold"
            android:layout_marginStart="20dp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerChat"
        android:layout_weight="15"
        android:orientation="vertical"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearMessage"
        android:orientation="horizontal"
        android:padding="10dp"

        >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/etSendMessage"
            android:background="@color/dark_gold"
            android:hint="Escribe un mensaje..."
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:inputType="text"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:id="@+id/btnSendMessage"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            />

    </LinearLayout>



</LinearLayout>