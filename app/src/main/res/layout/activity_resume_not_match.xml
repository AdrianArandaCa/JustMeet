<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondobg1"
    tools:context=".Activitys.ActivityResumeNotMatch">

    <ImageView
        android:id="@+id/ivJustResume"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/justresume"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPorcentaje"
        app:layout_constraintTop_toBottomOf="@id/ivJustResume"
        android:text="@string/percent_affinity"
        android:textColor="@color/dark_gold"
        android:textAlignment="center"
        android:textSize="25sp"
        android:fontFamily="@font/champagnebold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPorcentajeNum"
        app:layout_constraintTop_toBottomOf="@id/tvPorcentaje"
        android:text="30%"
        android:textColor="@color/dark_gold"
        android:textAlignment="center"
        android:textSize="50sp"
        android:fontFamily="@font/versa"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/ivNotMatch"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/justnotmatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPorcentajeNum"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMensajeMatch"
        app:layout_constraintTop_toBottomOf="@id/ivNotMatch"
        android:text="@string/noworries"
        android:textColor="@color/dark_gold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/champagnebolditalic"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMensajeMatch2"
        app:layout_constraintTop_toBottomOf="@id/tvMensajeMatch"
        android:text="@string/letsplayagain"
        android:textColor="@color/dark_gold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/champagnebolditalic"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVolverInicio"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_button"
        android:text="@string/back_home"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/champagnebold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMensajeMatch2" />

</androidx.constraintlayout.widget.ConstraintLayout>